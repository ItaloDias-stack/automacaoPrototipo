<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tela1">

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/botaoSala"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:onClick="vaiPSala"
                android:text="Sala"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="31dp" />

            <Button
                android:id="@+id/botaoQuarto1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:onClick="vaiPQuarto1"
                android:text="Quarto 1"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="191dp" />

            <Button
                android:id="@+id/botaoQuarto2"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="vaiPQuarto2"
                android:text="Quarto 2"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/botaoQuarto1"
                tools:layout_editor_absoluteX="37dp" />

            <Button
                android:id="@+id/botaoCozinha"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="vaiPCozinha"
                android:text="Cozinha"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="83dp" />

            <Button
                android:id="@+id/botaoBanheiro"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="vaiPBanheiro"
                android:text="Banheiro"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="37dp"
                tools:layout_editor_absoluteY="135dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>